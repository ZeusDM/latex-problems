\ifzeusproblems@draft
	\newcommand{\problem}[2][]{
		\IfProblemHasSource{#2}{%
			\begin{prob}[\ignorespaces\source{#2}\unskip\unskip\unskip\unskip]
					\exercise{#2#1}
			\end{prob}
			}{%
			\begin{prob}
				\exercise{#2#1}
			\end{prob}
			}
	}
	
	\WithSuffix\newcommand\problem*[1]{
		\begin{prob}
			\exercise{#1}
		\end{prob}
	}
	
	\newcommand{\solution}[2][]{
		\begin{sol}
			\solutionfoe{#2#1}
		\end{sol}
	}
\else
	\newcommand{\problem}[2][]{
		\IfProblemExists{#2#1}{
			\IfProblemHasSource{#2}{%
				\begin{prob}[\ignorespaces\source{#2}\unskip\unskip\unskip\unskip]
						\exercise{#2#1}
				\end{prob}
				}{%
				\begin{prob}
					\exercise{#2#1}
				\end{prob}
				}
			}{}
	}
	
	\WithSuffix\newcommand\problem*[2][]{
		\IfProblemExists{#2#1}{
			\begin{prob}
				\exercise{#2#1}
			\end{prob}
		}{}
	}
	
	\newcommand{\solution}[2][]{
		\IfSolutionExists{#2#1}{
			\begin{sol}
				\solutionfoe{#2#1}
			\end{sol}
		}{}
	}
\fi


